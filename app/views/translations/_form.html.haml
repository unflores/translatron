= form_for @translation do |f|
  -if @translation.errors.any?
    #error_explanation
      %h2= "#{pluralize(@translation.errors.count, "error")} prohibited this translation from being saved:"
      %ul
        - @translation.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label       :value
    = f.text_field  :value
  = f.fields_for :translation_key do |key|
    .field
      = key.label       :scope
      = key.text_field  :scope
    .field
      = key.label       :tkey
      = key.text_field  :tkey
  .actions
    = f.submit 'Save'
