= form_for @locale do |f|
  -if @locale.errors.any?
    #error_explanation
      %h2= "#{pluralize(@locale.errors.count, "error")} prohibited this locale from being saved:"
      %ul
        - @locale.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :code
    = f.text_field :code
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :master
    = f.check_box :master
  .actions
    = f.submit 'Save'
